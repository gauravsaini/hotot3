{
  "manifest_version": 2,
  "name": "Hotot",
  "description": "Master your social networks.",
  "version": "3.0.18.6",
  "minimum_chrome_version": "27",
  "app": {
    "background": {
      "scripts": ["scripts/background.js"]
    }
  },
  "icons": {
    "16": "icons/22x22/apps/hotot.png",
    "24": "icons/24x24/apps/hotot.png",
    "128": "icons/128x128/apps/hotot.png"
  },
  "sandbox": {
    "pages": ["sandbox.html"]
  },
  "permissions": [
    "https://*/*",
    "http://*/*",
    "storage",
    "webview",
    "contextMenus",
    "unlimitedStorage",
    "notifications",
    "clipboardRead",
    "clipboardWrite",
    "fileSystem",
    "fileSystem.write"
  ]
}
